<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="List Beacons"
        android:id="@+id/listBeaconsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onListBeaconsClick"
        android:src="@drawable/bart_button"
        android:scaleType="centerInside"
        />




    <ImageButton
        android:id="@+id/MonitoringButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/listBeaconsButton"
        android:onClick="onMonitoringClick"
        android:text="Monitoring"
        android:src="@drawable/lisa_button"
        android:scaleType="centerInside"
        />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Store Example"
        android:id="@+id/storeButton"
        android:layout_below="@+id/MonitoringButton"
        android:layout_alignParentStart="true"
        android:onClick="onStoreClick"
        android:src="@drawable/homer_button"
        android:scaleType="centerInside"
        />
</RelativeLayout>
