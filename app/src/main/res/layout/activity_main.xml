<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListBeacons"
        android:id="@+id/listBeaconsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onListBeaconsClick"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Example"
        android:id="@+id/storeButton"
        android:layout_below="@+id/listBeaconsButton"
        android:layout_alignParentStart="true"
        android:onClick="onStoreClick"
        />

    <Button
        android:id="@+id/MonitoringButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storeButton"
        android:onClick="onMonitoringClick"
        android:text="Monitoring"
        />
</RelativeLayout>
